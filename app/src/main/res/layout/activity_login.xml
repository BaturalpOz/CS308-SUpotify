<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mysugrey">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="150dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome!"
            android:textSize="30sp"
            android:textColor="@color/mysublue"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">

            <TextView
                android:id="@+id/emailLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email:"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/mysublue"/>

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter your email"
                android:background="@android:color/white"
                android:textColor="@color/black"
                android:padding="10dp"
                android:layout_below="@id/emailLabel"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/oldPasswordLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password:"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/mysublue"
                android:layout_below="@id/email"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/oldPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter your password"
                android:background="@android:color/white"
                android:textColor="@color/black"
                android:padding="10dp"
                android:layout_below="@id/oldPasswordLabel"
                android:layout_marginTop="4dp"/>

            <ToggleButton
                android:id="@+id/togglePasswordVisibility"
                android:layout_width="90dp"
                android:layout_height="47dp"
                android:layout_below="@id/oldPasswordLabel"
                android:layout_marginStart="300dp"
                android:padding="15dp"
                android:textOff="Show"
                android:textOn="Hide"
                android:textColor="@android:color/black"
                android:textSize="10sp"
                android:background="@color/mysugrey"/>

            <TextView
                android:id="@+id/forgotPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/oldPasswordLabel"
                android:layout_marginStart="240dp"
                android:layout_marginTop="56dp"
                android:textSize="15sp"
                android:text="Forgot Password?"
                android:textColor="@android:color/holo_purple"
                android:textStyle="bold" />

            <Button
                android:id="@+id/changePasswordButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textColor="@color/mysugrey"
                android:background="@color/mysublue"
                android:layout_below="@id/oldPassword"
                android:layout_marginTop="40dp"/>

            <TextView
                android:id="@+id/signUpHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You can SIGN UP if you don't have an account"
                android:textColor="@color/mysublue"
                android:layout_below="@id/changePasswordButton"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:clickable="true"
                android:onClick="onSignUpClick"/>

        </RelativeLayout>

        <Button
            android:id="@+id/googleSignInButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners"
            android:drawableStart="@drawable/google_icon"
            android:drawableLeft="@drawable/google_icon"
            android:drawablePadding="8dp"
            android:onClick="onGoogleSignInClick"
            android:padding="8dp"
            android:text="Sign in with Google"
            android:textAllCaps="false"
            android:textColor="@color/GoogleTextColor"
            android:textStyle="bold"
            android:layout_marginStart="100dp"/>
    </LinearLayout>
</RelativeLayout>
